services:
  waha:
    image: devlikeapro/waha:latest
    container_name: waha
    restart: always
    ports:
      - "3000:3000"
    environment:
      - API_KEY=${WAHA_API_KEY}
      - WHATSAPP_SWAGGER_ENABLED=true
      - WHATSAPP_SWAGGER_USERNAME=${WHATSAPP_SWAGGER_USERNAME}
      - WHATSAPP_SWAGGER_PASSWORD=${WHATSAPP_SWAGGER_PASSWORD}
      - DB_PATH=/data/waha.db
      - SESSION_DIR=/data/sessions
      - TZ=Asia/Jakarta
    volumes:
      - /home/$USER/volumes/waha-data:/data

# setelah di run, perhatikan di logs container. untuk username dan password dashboard waha